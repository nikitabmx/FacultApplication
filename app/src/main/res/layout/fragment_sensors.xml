<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SensorsFragment"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/tvTitleSensors"
        android:text="Датчики"



        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:paddingTop="15dp"
        android:layout_marginTop="8dp"
        android:background="@color/Blue"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"


        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAccelerometerTV"
        android:layout_width="86dp"
        android:layout_height="27dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:gravity="center"
        android:text="@string/accelerometer"
        android:textColor="@color/Blue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnTakePhoto"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Сделать фото и сохранить"

        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccelerometerTV"
        app:layout_constraintVertical_bias="0.958" />

    <ImageView
        android:id="@+id/imgViewScreen"
        android:layout_width="270dp"
        android:layout_height="340dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="72dp"
        android:contentDescription="@string/screenshot"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAccelerometerTV"
        app:layout_constraintVertical_bias="0.625" />


</android.support.constraint.ConstraintLayout>